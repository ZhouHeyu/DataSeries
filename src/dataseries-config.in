prefix=@CMAKE_INSTALL_PREFIX@
includedir=$prefix/include
libdir=$prefix/lib

usage()
{
    cat <<EOF
Usage: dataseries-config <OPTION>

Valid options:
  --cflags	       show needed compiler flags
  --libtool-libs       show link options for libtool
  --libs	       show library link options
  --help               show these options
  --version            show lintel version
EOF
exit 1
}

if test $# -ne 1; then
   usage
fi

case "$1" in
    --cflags)
        cflags="-I${includedir}/DataSeries"
	t="@LINTEL_INCLUDE_DIR@"; [ ! -z "$t" ] && cflags="$cflags -I$t"
	t="@XML2_INCLUDE_DIR@"; [ ! -z "$t" ] && cflags="$cflags -I$t"
	echo $cflags
	exit 0
    	;;
    --libtool-libs)
	echo /no/such/file/not/supported/dataseries-config/--libtool-libs
	exit 0
	;;
    --libs)
        if test $libdir = '/usr/lib'; then
	    echo "-lDataSeries"
        else
	    echo "-L$libdir -lDataSeries"
	fi
	exit 0
	;;
    --help)
        usage
	;;
    --version)
    	echo @DATASERIES_VERSION@;
    	exit 0
    	;;
    *)
        echo "unknown option $1"
	usage
	;;
esac
